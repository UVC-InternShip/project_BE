{
  "editor.formatOnSave": true, // 저장할 때 자동으로 포맷팅
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Prettier를 기본 포맷터로 설정
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // 저장 시 ESLint 규칙 자동 적용
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
